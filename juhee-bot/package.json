{
  "name": "juhee-bot",
  "version": "1.0.0",
  "description": "Discord TTS봇 - 메시지를 TTS로 재생합니다.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "dev": "nodemon ./.cache/app/index.js > ./app.log &",
    "dev:shard": "nodemon ./.cache/app/shard.js",
    "build": "tsc",
    "start": "node ./.cache/app/index.js",
    "start:shard": "node ./.cache/app/shard.js",
    "pm2:start": "pm2 start ecosystem.config.cjs --only juhee-bot",
    "pm2:start:shard": "pm2 start ecosystem.config.cjs --only juhee-bot-sharded",
    "pm2:stop": "pm2 stop juhee-bot",
    "pm2:stop:shard": "pm2 stop juhee-bot-sharded",
    "pm2:restart": "pm2 restart juhee-bot",
    "pm2:restart:shard": "pm2 restart juhee-bot-sharded",
    "pm2:reload": "pm2 reload juhee-bot",
    "pm2:reload:shard": "pm2 reload juhee-bot-sharded",
    "pm2:delete": "pm2 delete juhee-bot",
    "pm2:delete:shard": "pm2 delete juhee-bot-sharded",
    "pm2:logs": "pm2 logs juhee-bot",
    "pm2:logs:shard": "pm2 logs juhee-bot-sharded",
    "pm2:status": "pm2 status"
  },
  "author": "kevin1113dev <kevin1113dev@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevin1113-github/juhee-bot"
  },
  "devDependencies": {
    "@types/node": "^24.9.2",
    "pm2": "^6.0.13"
  },
  "type": "module",
  "dependencies": {
    "@azure/ai-text-analytics": "^5.1.0",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@snazzah/davey": "^0.1.7",
    "discord.js": "^14.24.2",
    "dotenv": "^17.2.3",
    "koreanbots": "^3.2.1",
    "libsodium-wrappers": "^0.7.15",
    "microsoft-cognitiveservices-speech-sdk": "^1.46.0",
    "node-audio-mixer": "^2.1.0",
    "nodemon": "^3.1.10",
    "prism-media": "^1.3.5",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "typescript": "^5.9.3"
  }
}
