{
  "name": "juhee-bot",
  "version": "1.0.0",
  "description": "Discord TTS봇 - 메시지를 TTS로 재생합니다.",
  "main": "index.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && npm run pm2:start",
    "reload": "npm run build && npm run pm2:reload",
    "stop": "npm run pm2:delete",
    "updateCommands": "node ./.cache/app/updateCommands.js",
    "deleteAllCommands": "node ./.cache/app/deleteAllCommands.js",
    "pm2:start": "pm2 start ecosystem.config.cjs --only juhee-bot",
    "pm2:stop": "pm2 stop juhee-bot",
    "pm2:restart": "pm2 restart juhee-bot",
    "pm2:reload": "pm2 reload juhee-bot",
    "pm2:delete": "pm2 delete juhee-bot",
    "pm2:logs": "pm2 logs juhee-bot",
    "pm2:status": "pm2 status"
  },
  "author": "kevin1113dev <kevin1113dev@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/kevin1113-github/juhee-bot"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "pm2": "^6.0.14"
  },
  "type": "module",
  "dependencies": {
    "@azure/ai-text-analytics": "^5.1.0",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@snazzah/davey": "^0.1.9",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "koreanbots": "^3.2.1",
    "libsodium-wrappers": "^0.7.16",
    "microsoft-cognitiveservices-speech-sdk": "^1.47.0",
    "node-audio-mixer": "^2.1.0",
    "nodemon": "^3.1.11",
    "prism-media": "^1.3.5",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "typescript": "^5.9.3"
  }
}
